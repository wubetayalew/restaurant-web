//  Left Panel 
Header
  .content
    .animated.fadeIn
      .row
        .col-lg-10
          .card
            .card-header
              strong Update Food
            .card-body.card-block
              form.form-horizontal(action="/addFood", method="post",enctype='multipart/form-data')
                .row.form-group.                  
                .row.form-group
                  .col.col-md-3
                    label.form-control-label(for="foodname") Food Title
                  .col-12.col-md-9
                    input#text-input.form-control(type="text", name="foodname", value= food.menu_name required)
                .row.form-group
                  .col.col-md-3
                    label.form-control-label(for="selectSm") Type
                  .col-12.col-md-9
                    select#selectSm.form-control-sm.form-control(name="selectSm")
                      option(value=food.type)= food.type
                      option(value="Fasting") Fasting
                      option(value="Normal") Normal
                      option(value="Drinks") Drinks
                      option(value="Traditional") Traditional
                  .col.col-md-3
                    label.form-control-label(for="description" ) Description
                  .col-12.col-md-9
                    textarea#textarea-input.form-control(name="description", rows="9" required)=food.description
                .row.form-group
                  .col.col-md-3
                    label.form-control-label(for="price") Price
                  .col-12.col-md-9
                    input#text-input.form-control(type="text", name="price", value=food.price  required)
                    input#text-input.form-control(type="hidden", name="restaurant_name", value= "wubet" required)
                .row.form-group
                  .col.col-md-3
                    label.form-control-label(for="file-input" ) Image
                  .col-12.col-md-9
                    input#image.form-control-file(type="file", name="image")
                .card-footer
                  button.btn.btn-primary.btn-sm(type="submit")
                    i.fa.fa-dot-circle-o
                      |  Submit
