include ./includes/nav.pug  
#right-panel.right-panel
  //  Header
  header#header.header
    .top-left
      .navbar-header
        a.navbar-brand(href="./")
          h5=restuarant_name
        a.navbar-brand.hidden(href="./")
          
        a#menuToggle.menutoggle
          i.fa.fa-bars
    .top-right
      .header-menu
        .header-left
          button.search-trigger
            i.fa.fa-search
          .form-inline
            form.search-form
              input.form-control.mr-sm-2(type="text", placeholder="Search ...", aria-label="Search")
              button.search-close(type="submit")
                i.fa.fa-close
          .dropdown.for-notification
            button.btn.btn-secondary.dropdown-toggle#notification(type="button", data-toggle="dropdown", aria-haspopup="true", aria-expanded="false")
              i.fa.fa-bell
              span.count.bg-danger 3
            .dropdown-menu(aria-labelledby="notification")
              p.red You have 3 Notification
              a.dropdown-item.media(href="#")
                i.fa.fa-check
                p Server #1 overloaded.
              a.dropdown-item.media(href="#")
                i.fa.fa-info
                p Server #2 overloaded.
              a.dropdown-item.media(href="#")
                i.fa.fa-warning
                p Server #3 overloaded.
          .dropdown.for-message
            button.btn.btn-secondary.dropdown-toggle#message(type="button", data-toggle="dropdown", aria-haspopup="true", aria-expanded="false")
              i.fa.fa-envelope
              span.count.bg-primary 4
            .dropdown-menu(aria-labelledby="message")
              p.red You have 4 Mails
              a.dropdown-item.media(href="#")
                span.photo.media-left
                  img(src="images/avatar/2.jpg")
                .message.media-body
                  span.name.float-left Jonathan Smith
                  span.time.float-right Just now
                  p Hello, this is an example msg
              a.dropdown-item.media(href="#")
                span.photo.media-left
                  img(alt="avatar", src="images/avatar/2.jpg")
                .message.media-body
                  span.name.float-left Jack Sanders
                  span.time.float-right 5 minutes ago
                  p Lorem ipsum dolor sit amet, consectetur
              a.dropdown-item.media(href="#")
                span.photo.media-left
                  img(alt="avatar", src="images/avatar/3.jpg")
                .message.media-body
                  span.name.float-left Cheryl Wheeler
                  span.time.float-right 10 minutes ago
                  p Hello, this is an example msg
              a.dropdown-item.media(href="#")
                span.photo.media-left
                  img(alt="avatar", src="images/avatar/4.jpg")
                .message.media-body
                  span.name.float-left Rachel Santos
                  span.time.float-right 15 minutes ago
                  p Lorem ipsum dolor sit amet, consectetur
        .user-area.dropdown.float-right
          a.dropdown-toggle.active(href="#", data-toggle="dropdown", aria-haspopup="true", aria-expanded="false")
            img.user-avatar.rounded-circle(src="images/admin.jpg", alt="User Avatar")
          .user-menu.dropdown-menu
            a.nav-link(href="#")
              i.fa.fa-.user
              | My Profile
            a.nav-link(href="#")
              i.fa.fa-.user
              | Notifications 
              span.count 13
            a.nav-link(href="#")
              i.fa.fa.-cog
              | Settings
            a.nav-link(href="#")
              i.fa.fa-power.-off
              | Logout
  //  /#header 
  //  Content

  .content
    .animated.fadeIn
      .row
       each food in foods
         .col-md-4
            .card
             img.card-img-top(src=food.image,style="height: 350px", alt="Card image cap")
             .card-body
                h4.card-title.mb-3= food.menu_name 
                h4.card-title.mb-3= food.price + ' Birr'
                p.card-text= food.description
                form(action="/changeStatus", method="post")
                  input(type='hidden' name='foodName' value=food.menu_name)
                  input(type='hidden' name='foodStatus' value=food.item_status)
                  input(type='submit' value=!food.item_status ? 'Activate' : 'Deactivate')
                form(action="/changeRecordStatus", method="post")
                  input(type='hidden' name='foodName' value=food.menu_name)
                  input(type='hidden' name='foodRecordStatus' value=food.item_record_status)
                  input(type='submit' value= 'Delete')
                form(action="/updateFood", method="post")
                  input(type='hidden' name='foodName' value=food.menu_name)
                  input(type='submit' value= 'Update') 
                



        
      


  script(src="https://cdn.jsdelivr.net/npm/jquery@2.2.4/dist/jquery.min.js")
  script(src="https://cdn.jsdelivr.net/npm/popper.js@1.14.4/dist/umd/popper.min.js")
  script(src="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/js/bootstrap.min.js")
  script(src="https://cdn.jsdelivr.net/npm/jquery-match-height@0.7.2/dist/jquery.matchHeight.min.js")
  script(src="assets/js/main.js")